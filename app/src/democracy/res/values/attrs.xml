<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FontableTextView">
        <attr name="font" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <!-- Header -->

        <attr name="header_background" format="reference"/>
        <attr name="header_height" format="dimension"/>

        <attr name="header_title_color" format="reference"/>
        <attr name="header_title_size" format="dimension"/>

        <attr name="header_button_vertical_padding" format="dimension"/>
        <attr name="header_button_horizontal_padding" format="dimension"/>
        <attr name="header_button_width" format="dimension"/>
        <attr name="header_button_height" format="dimension"/>

        <!-- Menu -->

        <attr name="menu_width" format="dimension"/>

        <!-- Article -->

        <attr name="article_icon_missing" format="reference"/>
        <attr name="article_counter" format="reference"/>

        <attr name="article_category_margin" format="dimension"/>
        <attr name="article_category_text_color" format="reference"/>
        <attr name="article_category_background_color" format="reference"/>

        <!-- Article. Five marks -->

        <attr name="article_five_marks_vote_result_outer_circle" format="reference"/>

        <!-- Buttons -->

        <attr name="button_background_color" format="reference"/>
        <attr name="button_corner_radius" format="dimension"/>

        <!-- Text -->

        <attr name="text_primary_color" format="reference"/>
        <attr name="text_secondary_color" format="reference"/>
        <attr name="text_support_color" format="reference"/>
    </declare-styleable>
</resources>