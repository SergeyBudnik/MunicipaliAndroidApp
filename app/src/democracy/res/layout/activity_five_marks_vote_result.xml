<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fontable_text_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_blue">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"
                android:src="@drawable/back_button"
                android:contentDescription="@string/img_description"/>

            <acropollis.municipali.view.common.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/question"
                android:textColor="@color/primary_white"
                android:textSize="22sp"
                fontable_text_view:font="Oswald/Oswald-Regular"/>

        </RelativeLayout>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <acropollis.municipali.bootstrap.view.MunicipaliRowView_
                    android:id="@+id/article_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/continue_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    card_view:cardBackgroundColor="@color/primary_blue"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="20dp">

                    <acropollis.municipali.view.common.FontableTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:gravity="center"
                        android:text="@string/button_continue"
                        android:textColor="@color/primary_white"
                        android:textSize="18sp"
                        fontable_text_view:font="Oswald/Oswald-Regular"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/article_info"
                    android:layout_above="@id/continue_button"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    card_view:cardBackgroundColor="@color/primary_white"
                    card_view:cardElevation="5dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">

                            <acropollis.municipali.view.common.FontableTextView
                                android:id="@+id/question_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/primary_blue"
                                android:textSize="17sp"
                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="false"
                                android:weightSum="2"
                                android:layout_marginTop="20dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal">

                                    <acropollis.municipali.view.common.FontableTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/five_marks_your_vote"
                                        android:textSize="18sp"
                                        android:textColor="@color/primary_orange"
                                        fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                    <RelativeLayout
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_marginTop="10dp">

                                        <acropollis.municipali.view.common.SegmentedView_
                                            android:id="@+id/your_vote_segmented_oval"
                                            android:layout_width="1dp"
                                            android:layout_height="1dp"
                                            android:visibility="gone"/>

                                        <ImageView
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:src="@drawable/star_orange"/>

                                        <acropollis.municipali.view.common.FontableTextView
                                            android:id="@+id/your_vote_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:textSize="55sp"
                                            android:textColor="@color/primary_white"
                                            fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal">

                                    <acropollis.municipali.view.common.FontableTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/five_marks_average_vote"
                                        android:textSize="18sp"
                                        android:textColor="@color/primary_black"
                                        fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                    <RelativeLayout
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_marginTop="10dp">

                                        <acropollis.municipali.view.common.SegmentedView_
                                            android:id="@+id/average_vote_segmented_oval"
                                            android:layout_width="1dp"
                                            android:layout_height="1dp"
                                            android:visibility="gone"/>

                                        <ImageView
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:src="@drawable/star_white"/>

                                        <acropollis.municipali.view.common.FontableTextView
                                            android:id="@+id/average_vote_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:textSize="55sp"
                                            android:textColor="@color/primary_black"
                                            fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        <ImageView
                                            android:id="@+id/average_vote_loading_spinner"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/red_spinner"
                                            android:contentDescription="@string/img_description"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <acropollis.municipali.view.MenuView_
                android:id="@+id/menu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"/>

        </android.support.v4.widget.DrawerLayout>

    </LinearLayout>

</RelativeLayout>