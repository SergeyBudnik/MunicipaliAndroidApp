<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fontable_text_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/primary_blue"
            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/back_button"
                    android:contentDescription="@string/img_description"/>

                <acropollis.municipali.view.common.FontableTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/question"
                    android:textColor="@color/primary_white"
                    android:textSize="22sp"
                    fontable_text_view:font="Oswald/Oswald-Regular"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <acropollis.municipali.bootstrap.view.MunicipaliRowView_
                    android:id="@+id/article_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <fragment
                    android:id="@+id/vote_buttons_layout"
                    android:name="acropollis.municipali.fragments.question.vote.QuestionVoteButtonsFragment_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"
                    tools:layout="@layout/fragment_question_vote_buttons"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/article_info"
                    android:layout_above="@id/vote_buttons_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    card_view:cardBackgroundColor="@color/primary_white"
                    card_view:cardElevation="5dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:background="@drawable/white_layout">

                            <acropollis.municipali.view.common.FontableTextView
                                android:id="@+id/question_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textSize="17sp"
                                android:textColor="@color/primary_blue"
                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="false"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:weightSum="5">

                                <LinearLayout
                                    android:id="@+id/vote_1"
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:visibility="gone">

                                        <View
                                            android:id="@+id/vote_1_unselected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_centerInParent="true"
                                            android:background="@color/primary_gray"/>

                                        <View
                                            android:id="@+id/vote_1_selected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:visibility="invisible"
                                            android:background="@color/primary_red"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/vote_1_unselected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_gray"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_strongly_disagree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/vote_1_selected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:visibility="gone">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_orange"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_strongly_disagree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/vote_2"
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:visibility="gone">

                                        <View
                                            android:id="@+id/vote_2_unselected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_centerInParent="true"
                                            android:background="@color/primary_gray"/>

                                        <View
                                            android:id="@+id/vote_2_selected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:visibility="invisible"
                                            android:background="@color/primary_red"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/vote_2_unselected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_gray"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_disagree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/vote_2_selected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:visibility="gone">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_orange"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_disagree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/vote_3"
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:visibility="gone">

                                        <View
                                            android:id="@+id/vote_3_unselected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_centerInParent="true"
                                            android:background="@color/primary_gray"/>

                                        <View
                                            android:id="@+id/vote_3_selected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:visibility="invisible"
                                            android:background="@color/primary_red"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/vote_3_unselected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_gray"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_neutral_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/vote_3_selected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:visibility="gone">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_orange"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_neutral_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/vote_4"
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:visibility="gone">

                                        <View
                                            android:id="@+id/vote_4_unselected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_centerInParent="true"
                                            android:background="@color/primary_gray"/>

                                        <View
                                            android:id="@+id/vote_4_selected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:visibility="invisible"
                                            android:background="@color/primary_red"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/vote_4_unselected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_gray"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_agree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/vote_4_selected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:visibility="gone">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_orange"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_agree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/vote_5"
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:visibility="gone">

                                        <View
                                            android:id="@+id/vote_5_unselected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_centerInParent="true"
                                            android:background="@color/primary_gray"/>

                                        <View
                                            android:id="@+id/vote_5_selected_underscore"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:visibility="invisible"
                                            android:background="@color/primary_red"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/vote_5_unselected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_gray"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_strongly_agree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/vote_5_selected_circle"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:visibility="gone">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:src="@drawable/star_orange"
                                                android:contentDescription="@string/img_description"/>

                                            <acropollis.municipali.view.common.FontableTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="@string/five_marks_strongly_agree_text"
                                                android:textSize="27sp"
                                                android:textColor="@color/primary_white"
                                                fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                        </RelativeLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp">

                                <acropollis.municipali.view.common.FontableTextView
                                    android:id="@+id/negative_answer"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="start"
                                    android:textColor="@color/primary_blue"
                                    android:textSize="16sp"
                                    fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="4"/>

                                <acropollis.municipali.view.common.FontableTextView
                                    android:id="@+id/positive_answer"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="end"
                                    android:textColor="@color/primary_orange"
                                    android:textSize="16sp"
                                    fontable_text_view:font="PT_Sans_Narrow/PT_Sans-Narrow-Web-Regular"/>

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <acropollis.municipali.view.MenuView_
                android:id="@+id/menu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"/>

        </android.support.v4.widget.DrawerLayout>

    </LinearLayout>

</RelativeLayout>